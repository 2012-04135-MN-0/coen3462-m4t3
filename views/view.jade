doctype html
html
  head
    link(rel='stylesheet', type='text/css', href='../stylesheets/bulma.css')
    title
  body(style='background-attachment:fixed', background='../images/fbg.jpg')
    nav.nav.has-shadow.is-black
      .container
        .nav-left
          a.nav-item
            img(src='../images/Team 3 Logo.jpg')
            a.nav-item.is-tab(href='/')
              strong Home
            a.nav-item.is-tab.is-active(href='/view')
              strong View Speech
            a.nav-item.is-tab(href='/add')
              strong Add Speech
    br
    br
    .columns
      .column.is-2.is-offset-1
        form(method='post', action='/view/find')
          h1.title.is-1
            strong
              | View by:
              strong
          label.label Title
          p.control
            span.select
              select(name='inputTitle')
                option Select Title
                option DEPARTURE SPEECH OF PRESIDENT RODRIGO ROA DUTERTE
                option Joseph Ejercito Estrada
          label.label Speaker
          p.control
            span.select
              select(name='inputSpeaker')
                option Select Speaker
                option Rodrigo Duterte
                option Benigno Aquino III
                option Gloria Macapagal Arroyo
                option Joseph Ejercito Estrada
                option Fidel V. Ramos
                option Corazon Aquino
                option Ferdinand E. Marcos
                option Diosdado P. Macapagal
                option Carlos P. Garcia
                option Ramon F. Magsaysay
                option Elpidio R. Quirino
                option Manuel L. Roxas
                option Jose P. Laurel
                option Sergio S. Osmena
                option Manuel L. Quezon
                option Emilio F. Aguinaldo
          .control.is-grouped
            p.control
              button.button.is-primary View
            p.control
              button.button.is-primary Cancel
      .column.is-6.is-offset-1
        br
        br
        br
        br
        .tile.notification.is-white
          br
          .content
            form(method='put', action='/viewspeech')
              h5
                strong Title: 
                label(name='title')
                  label
              h5
                strong Speaker: 
                label(name='speaker')
                  label
              h5
                strong Date Delivered: 
                label(name='date_delivered')
                  label
              h5
                strong Body: 
                label(name='body')
                  label
              h5
                strong Location: 
                label(name='locations')
                  label
              h5
                strong Perma Link: 
                label(name='permalink')
                  label
              h5
                strong Create Date: 
                label(name='create_date')
                  label
              h5
                strong Update Date: 
                label(name='update_date')
                  label
    .column.is-4.is-offset-4
      .control.is-grouped
        p.control
          a.button.is-primary(href='/add') Update
        form(method='post', action='/delete')
          p.control
            button.button.is-primary Delete
    br
    footer.footer
      .container
        .content.has-text-centered
          p
            strong Philippine President Speeches
            |  by Jayvee Asuncion and Sheila Siongco.
          p
            | The source code is licensed
            a(href='http://opensource.org/licenses/mit-license.php') MIT
            |             . The website content is licensed 
            a(href='http://creativecommons.org/licenses/by-nc-sa/4.0/') CC ANS 4.0
            | .
          p
            span.icon
              img(src='../images/github-256.png')
